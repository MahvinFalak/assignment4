<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>update!</title>
  </head>
  <body  style="background-color: lightslategray;">

    <%- include('./partials/header.ejs') %>

    <div class="container p-5">

        <h2 class="display-6 text-center">UPDATE PAGE</h2>
    
        <form method="POST" action="/updateF/<%=data._id %>">
            
            <div class="form-floating mb-3">
                <input type="text" name="name" class="form-control" id="floatingInput" placeholder="Your Name" value="<%=data.name %>">
                <label for="floatingInput">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" name="nickname" class="form-control" id="floatingInput" placeholder="Your Nick Name" value="<%=data.nickname %>">
                <label for="floatingInput">Nick Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="date" name="dob" class="form-control" id="floatingInput" placeholder="Your date of birth" value="<%=data.dob %>">
                <label for="floatingInput">DOB</label>
            </div>
              <div class="form-floating mb-3">
                <input type="number" name="mobile" class="form-control" id="floatingInput" placeholder="Mobile Number" value="<%=data.mobile %>">
                <label for="floatingInput">Mobile</label>
              </div>

               <div class="form-floating mb-3">
                <input type="text" name="insta" class="form-control" id="floatingInput" placeholder="Instagram Id" value="<%=data.insta %>">
                <label for="floatingInput">Instagram ID</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" name="snap" class="form-control" id="floatingInput" placeholder="Snapchat Id" value="<%=data.snap %>">
                    <label for="floatingInput">Snapchat ID</label>
                </div>

             <div class="form-floating mb-3">
                <input type="text" name="img" class="form-control" id="floatingInput" placeholder="Picture" value="<%=data.img %>">
                <label for="floatingInput">Image</label>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="SAVE" class="btn btn-success">
            </div>
    
        </form>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
