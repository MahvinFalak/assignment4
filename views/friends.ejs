  <body class="bg-dark">

    <%- include('./partials/header.ejs') %>

    <h2 class="display-1 text-center text-white">F.R.I.E.N.D.S</h2>
    <section >
        <div class="container">
            <div class="justify-content-center">
      <% books.forEach(function(book){ %>
           <div class="container m-3 d-flex " style="border: 2px solid gray;
           border-radius: 10px;
           background-color: rgb(234, 239, 243);" >
            <div>
           <img src="<%=book.img %>" alt="..." height="300px" width="300px" style="border-radius: 10px ;
           border :2px solid gray ;
           margin: 5px;">
           </div>
           <div style="align-items: center;
           text-align: center;
           margin: 10px 200px;
           font-weight: bold;">
               <p class=""><h3><%=book.name %></h3> <p>
               <p class="">Nick Name : <%=book.nickname %> </p>
               <p class=" ">DOB : <%=book.dob %></p>
               <p class="">Mobile : <%=book.mobile %></p>
               <p class="">Insta ID : <%=book.insta %></p>
               <p class="">Snap ID : <%=book.snap %></p>
               <a href="/deleteF/<%=book._id %>" class="btn btn-danger">Delete</a>
               <a href="/updateF/<%=book._id %>" class="btn btn-info">edit</a>
           </div>
           </div>

      <% }); %>
      
   </div>
   </div>
   </section>
   
   
   
