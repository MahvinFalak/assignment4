    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Caveat:wght@700&family=Noto+Sans+Wancho&display=swap" rel="stylesheet">

    <style> @import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&family=Noto+Sans+Wancho&display=swap'); 
    h2{
        font-family: 'Caveat';
        letter-spacing: 10px;
